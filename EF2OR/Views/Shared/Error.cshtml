@model EF2OR.Models.CustomHandleErrorInfoModel

@{
    ViewBag.Title = "Error";
    var isCustomException = Model.Exception.GetType().ToString() == "EF2OR.Models.EF2ORCustomException";
    var errorMessage = isCustomException ? Model.Exception.Message : "Contact the system administrator and give them the id: " + Model.ErrorId;
}

<hgroup class="title">
    <h1 class="error">Error.</h1>
    <h2 class="error">An error occurred while processing your request.</h2>
    <h3 class="error">@errorMessage</h3>
</hgroup>
